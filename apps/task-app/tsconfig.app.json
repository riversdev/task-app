{
  "extends": "@mono/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Bundler mode */
    "jsx": "react-jsx",

    /* Path alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "outDir": "./dist"

    /* Linting */
    // "erasableSyntaxOnly": true
  },
  "include": ["src", "tests"]
}
